---
import { Image } from "astro:assets";
import Presentation from "@components/Presentation.astro";
import Layout from "../layouts/Layout.astro";
import Card from "@components/Card.astro";
import postresqlSqlAssociate from "@assets/PostgreSQL_Associate-v10.png";
import mongoDbAssociate from "@assets/mongodb-associate-developer.6.png";
import iCodeJava from "@assets/i-code-java-100x117-3854594.avif";
import TechWall from "@components/TechWall.astro";
---

<Layout title="Home" description="Sito personale di Lucio Benfante">
    <div class="flex flex-wrap mb-2">
        <div class="flex flex-col w-full md:w-1/2">
            <div class="mb-2"><Presentation /></div>
            <div class="mb-2">
                <h1>Certificazioni</h1>
                <div class="flex flex-nowrap mb-2">
                    <a
                        href="https://www.oracle.com/java/"
                        target="_blank"
                        rel="noopener noreferrer"
                        ><Image
                            src={iCodeJava}
                            alt="iCode Java"
                            width={64}
                            height={64}
                            loading={"eager"}
                            class="min-w-16"
                        />
                    </a>
                    <p class="ml-2">
                        2002 - Sun Microsystems<br />
                        <spam class="font-bold"
                            >IT-310-035 - SUN CERTIFIED PROGRAMMER FOR JAVA 2
                            PLATFORM 1.4 (SCJP)</spam
                        >
                    </p>
                </div>
                <div class="flex flex-nowrap mb-2">
                    <a
                        href="https://www.youracclaim.com/badges/c387418a-0410-4626-9820-93cd20629cc6/public_url"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <Image
                            src={postresqlSqlAssociate}
                            alt="PostgreSQL Associate"
                            width={64}
                            height={64}
                            loading={"eager"}
                            class="min-w-16"
                        />
                    </a>
                    <p class="ml-2">
                        09/11/2020 - EnterpriseDB<br />
                        <spam class="font-bold"
                            >EDB CERTIFIED ASSOCIATE - POSTGRESQL 10</spam
                        ><br />
                        <a
                            href="https://www.youracclaim.com/badges/c387418a-0410-4626-9820-93cd20629cc6/public_url"
                            target="_blank"
                            rel="noopener noreferrer">Verifica</a
                        >
                    </p>
                </div>
                <div class="flex flex-nowrap mb-2">
                    <a
                        href="https://www.credly.com/badges/b3f7468a-d411-40e5-82d6-4a58fa35344d/public_url"
                        target="_blank"
                        rel="noopener noreferrer"
                    >
                        <Image
                            src={mongoDbAssociate}
                            alt="MongoDB Associate Developer"
                            width={64}
                            height={64}
                            loading={"eager"}
                            class="min-w-16"
                        />
                    </a>
                    <p class="ml-2">
                        13/08/2025 - MongoDB<br />
                        <spam class="font-bold"
                            >MongoDB Associate Developer</spam
                        ><br />
                        <a
                            href="https://www.credly.com/badges/b3f7468a-d411-40e5-82d6-4a58fa35344d/public_url"
                            target="_blank"
                            rel="noopener noreferrer">Verifica</a
                        >
                    </p>
                </div>
            </div>
        </div>
        <div class="w-full md:w-1/2 mb-2 px-0 md:px-4">
            <h1>Community</h1>
            <div class="flex flex-wrap">
                <div class="w-full md:w-1/2">
                    <Card
                        title="JUG Padova"
                        image="/src/assets/LogoJugPadova.svg"
                        imageDescription="JUG Padova logo"
                    >
                        <p>
                            Il Java User Group Padova è una comunità di
                            sviluppatori e appassionati del linguaggio di
                            programmazione Java e dell'ecosistema JVM.
                        </p>
                        <p>
                            Organizziamo incontri, workshop e conferenze per
                            condividere conoscenze ed esperienze.
                        </p>
                        <p class="text-right">
                            <a
                                href="https://www.jugpadova.it"
                                target="_blank"
                                rel="noopener noreferrer">www.jugpadova.it</a
                            >
                        </p>
                    </Card>
                </div>
                <div class="w-full md:w-1/2">
                    <Card
                        title="Java™ Champions"
                        image="/src/assets/DukeJavaChampions.png"
                        imageDescription="Java Champions logo"
                    >
                        <p>
                            I Java&trade; Champions sono leader riconosciuti nella
                            comunità Java che vengono nominati e selezionati dai
                            loro pari.
                        </p>
                        <p>
                            Dal 2006, sono un Java&trade; Champion e sono
                            orgoglioso di farne parte.
                        </p>
                        <p class="text-right">
                            <a
                                href="https://javachampions.org"
                                target="_blank"
                                rel="noopener noreferrer">javachampions.org</a
                            >
                        </p>
                    </Card>
                </div>
            </div>
        </div>
        <div>
            <h1>Tecnologie</h1>
            <p class="mb-4">Guarda il mio <a href="https://profile.codersrank.io/user/benfante" target="_blank" rel="noopener noreferrer">profilo su CodersRank</a>.</p>
            <TechWall />
        </div>
    </div>
</Layout>
